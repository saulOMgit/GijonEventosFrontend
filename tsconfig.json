{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vitest/globals"  // AÑADIDO: tipos globales de Vitest (vi, describe, it, expect...)
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "vitest.d.ts",           // AÑADIDO: archivo de tipos globales
    "setupTests.ts",         // AÑADIDO: para @testing-library/jest-dom
    "__tests__/**/*"         // AÑADIDO: incluye todos los tests
  ]
}